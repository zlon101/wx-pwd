/* pages/home.wxss */
page {
  box-sizing: border-box;
  height: 100vh;
  padding-top: env(safe-area-inset-top);
}
.home-wrap {
  height: 100%;
  padding: 24px 4px 20px;
  display: flex;
  flex-direction: column;
  color: black;
  font-size: 14px;
  box-sizing: border-box;
}

.input-wrapper {
  display: flex;
  width: 100%;
  padding: 20px 4px 0;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
}
.input-input {
  border: 1px solid #bec8c8;
  border-radius: 4px;
  height: 30px;
  flex: 1 1 auto;
  padding-left: 4px;
}

.check-btn {
  display: flex;
  align-items: center;
}
.r-btn {
  margin-top: 8px;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  position: fixed;
  bottom: 20px;
  right: 16px;
}
.checkbox {
  display: flex;
  justify-content: center;
  flex-direction: column;
  font-size: 10px;
  margin: 0 8px;
}
.btn {
  box-sizing: border-box;
  line-height: 30px;
  vertical-align: middle;
  border-radius: 4px;
  padding: 0 8px;
  font-size: 12px;
}
.edit-btn {
  margin-left: 4px;
  background-color: #4096ff;
  color: #fff;
  border: 1px solid transparent;
}
.cancel-btn {
  margin: 0 16px;
  background-color: #fff;
  color: #333;
  border: 1px solid #bec8c8;
}
.random-btn {
  background-color: #fff;
  color: rgb(22, 119, 255);
  border: 1px solid rgb(22, 119, 255);
}
.random-preview {
  position: fixed;
  top: calc(env(safe-area-inset-top) + 16px);
  left: 16px;
  color: blue;
  font-size: 14px;
}

.tab-bar {
  margin: 10px 0;
  display: flex;
  align-items: stretch;
  justify-content: space-between;
  height: 60rpx;
  border: .5px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
}
.tab-item {
  padding: 4px 40rpx;
}
.tab-item.active {
  background-color: aqua;
}


.scrollarea {
  flex: 1;
  overflow-y: hidden;
}
.text-box {
  padding: 20rpx;
  line-height: 1.5;
  border-bottom: 1px solid #333;
  word-break: break-all;
}
.text-box:not(:first-child) {
  padding-top: 50rpx;
}
.editarea {
  word-break: break-all;
  width: 100%;
  height: auto;
  flex: 0 0 auto;
  position: absolute;
  top: 130px;
  /* bottom: 45px; */
  border: 1px solid blue;
}

.footer {
  text-align: center;
}
